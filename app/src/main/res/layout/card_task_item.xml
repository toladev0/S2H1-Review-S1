<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:contentPadding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Icon on the left -->
        <ImageView
            android:id="@+id/cardIcon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/book_yellow_background"
            android:padding="10dp"
            android:contentDescription="@string/icon"
            app:srcCompat="@drawable/book_yellow"/>

        <!-- Texts in the middle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_study_title"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/cardTaskCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_study_task_count1"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Circular ProgressBar with percentage centered -->
        <FrameLayout
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/cardProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:indeterminateTint="@color/book_yellow"/>

            <TextView
                android:id="@+id/cardProgressPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/daily_study_task_percentage"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </FrameLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
